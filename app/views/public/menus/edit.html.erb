<div class="container">
  <div class="row justify-content-center">
    <h3 class="mb-3">献立編集</h3>
  </div>
  <div class="row">
    <div class="col-8 mx-auto">
      <%= render 'public/shared/error_messages', resource: @menu %>
      <%= form_with model: @menu, url: menu_path(@menu), method: :patch, local: true do |f| %>
        <%= render 'form', f: f %>
        <div class="row justify-content-around">
          <div class="form-group">
            <%= f.submit "変更する", class: "btn btn-outline-success" %>
          </div>
          <div class="form-group">
            <%= link_to "削除する", menu_path(@menu), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-outline-danger" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>