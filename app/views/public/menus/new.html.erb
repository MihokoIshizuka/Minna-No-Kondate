<div class="container">
  <div class="row justify-content-center">
    <h3 class="mb-3">新規投稿</h3>
  </div>
  <div class="row">
    <div class="col-8 mx-auto">
      <%= form_with model: @menu, url: menus_path(@menu), method: :post, local: true do |f| %>
        <%= render 'form', f: f %>
        <div class="row  justify-content-center">
          <div class="form-group">
            <%= f.submit "投稿する", class: "btn btn-outline-success" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>