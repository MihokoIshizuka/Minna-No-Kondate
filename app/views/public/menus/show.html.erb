<div class="container">
  <div class="row justify-content-around">
    <div class="col-4 mr-10">
      <%= image_tag @menu.menu_image, size:"400x350" %>
    </div>
    <div class="col-6">
      <div class="row justify-content-center">
        <%= @menu.date %>
      </div>
      <div class="row">
        <div class="col">
          <%=safe_join(@menu.body.split("\n"),tag(:br))%>
        </div>
      </div>

      <div class="row justify-content-end">
        <div class="col-3">
          <% if @menu.member == current_member %>
            <%= link_to "編集", edit_menu_path(@menu), class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-4">
      <%= form_with model: [@menu, @menu_comment], url: menu_menu_comments_path(@menu), method: :post, local: true do |f| %>
        <%= f.label :コメント %><br>
        <%= f.text_area :comment, rows: "5" %><br>
        <%= f.submit "コメントする", class: "btn btn-info" %>
      <% end %>
    </div>
    <div class="col-6">
      <p>コメント件数: <%= @menu.menu_comments.count %> 件</p>
      <% @menu.menu_comments.each do |menu_comment| %>
        <div class="row">
          <div class="col-2">
            <%= link_to member_path(menu_comment.member) do %>
              <%= image_tag menu_comment.member.get_profile_image, size:"65x65" %><br>
              <%= menu_comment.member.name %>
            <% end %>
          </div>
          <div class="col-4">
            <%= menu_comment.comment %><br>
            <%= menu_comment.created_at. strftime('%Y/%m/%d') %>
            <% if menu_comment.member == current_member %>
              <%= link_to "削除", menu_menu_comment_path(menu_comment.menu, menu_comment), method: :delete, class: "btn btn-sm btn-danger" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>