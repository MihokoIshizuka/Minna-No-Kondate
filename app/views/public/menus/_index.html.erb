<div class="col-9">
  <div class="row">
    <div class="col-3 ml-auto">
      <%= link_to new_menu_path, class: "btn" do %>
        <i class="fas fa-plus-circle fa-4x" style="color:lavender;"></i>
      <% end %>
    </div>
  </div>
  <% menus.each do |menu| %>
    <div class="col-3 mx-5 menus_item">
      <%= link_to menu_path(menu) do %>
        <%= image_tag menu.get_menu_image(200, 200) %><br>
        <%= menu.member.name %><br>
        <%= menu.date %>
      <% end %>
      <p>
        <% if menu.favorited_by?(current_member) %>
          <%= link_to menu_favorites_path(menu), method: :delete do %>
            <i class="fas fa-heart fa-2x" style="color:palevioletred;"></i>
            <%= menu.favorites.count %>
          <% end %>
        <% else %>
          <%= link_to menu_favorites_path(menu), method: :post do %>
            <i class="fas fa-heart fa-2x" style="color:whitesmoke;"></i>
            <%= menu.favorites.count %>
          <% end %>
        <% end %>

        <i class="fas fa-comment fa-2x ml-3" style="color:lightsteelblue;"></i>
        <%= link_to "#{menu.menu_comments.count}", menu_path(menu), class: "btn" %>
      </p>

    </div>
  <% end %>
</div>