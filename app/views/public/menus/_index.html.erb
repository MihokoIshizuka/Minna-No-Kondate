<div class="col-9">
  <div class="row">
    <div class="col-3 ml-auto">
      <%= link_to new_menu_path, class: "btn" do %>
        <i class="fas fa-plus-circle fa-4x" style="color:lavender;"></i>
      <% end %>
    </div>
  </div>
  <% menus.each do |menu| %>
    <div class="col-3 mx-5 menus_item">
      <%= link_to menu_path(menu) do %>
        <%= image_tag menu.get_menu_image(200, 200) %><br>
        <%= menu.member.name %><br>
        <%= menu.date %>
      <% end %>
    </div>
  <% end %>
</div>