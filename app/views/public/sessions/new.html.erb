<div class="container">
  <div class="row justify-content-center">
    <h3 class="mb-3">ログイン</h3>
  </div>
  <div class="row">
    <div class="col-6 mx-auto">
      <%= form_with model: @member, url: member_session_path(@member), class: "text-center py-5" do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="form-group">
          <%= f.submit "ログイン", class: "btn btn-outline-info mt-3" %>
        </div>

        <div class="row justify-content-center">
          <%= render "public/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
