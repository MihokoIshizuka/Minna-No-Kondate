<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/members/info', member: @member %>
    </div>
    <div class="col-md-8 offset-md-1">
      <div class="row justify-content-center">
        <h4 class="my-3">フォロー</h4>
      </div>
      <div class="row justify-content-center">
        <% unless @members.exists? %>
          <h3>現在フォローはいません</h3>
        <% else %>
          <%= render 'public/members/index', members: @members %>
        <% end %>
      </div>
      <%= paginate @members %>
    </div>
  </div>
</div>
