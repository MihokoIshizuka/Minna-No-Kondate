<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'public/members/info', member: @member %>
    </div>
    <div class="col-md-8 offset-1">
      <div class="row justify-content-center">
        <h4>フォロワー</h4>
      </div>
      <div class="row justify-content-center">
        <% unless @members.exists? %>
          <h3 class="mt-3">現在フォロワーはいません</h3>
        <% else %>
          <%= render 'public/members/index', members: @members %>
          <%= paginate @members %>
        <% end %>
      </div>
    </div>
  </div>
</div>
