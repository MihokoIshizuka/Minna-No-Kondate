<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10 text-center">
      <h2><%= @group.name %></h2>
      <p><%= @group.introduction %></p>
      <div class="row justify-content-end">
        <div class="col-md-3 mr-2">
          <% unless @group.owner_id == current_member.id %>
            <% if @group.members.include?(current_member) %>
              <%= link_to "グループを退会", group_path(@group), method: :delete, class: "btn btn-danger" %>
            <% else %>
              <%= link_to "グループに参加", group_join_path(@group), class: "btn btn-info" %>
            <% end %>
          <% end %>
        </div>
        <div class="col-md-3 mr-3">
          <% if @group.members.include?(current_member) %>
            <%= link_to "グループチャット", group_chats_path(@group), class: "btn btn-outline-primary" %>
          <% end %>
        </div>
      </div>
      <div class="row justify-content-center group-member-index">
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>名前</th>
              <th>紹介</th>
              <th>よく利用するタグ</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @members.each do |member| %>
              <tr>
                <td>
                  <%= link_to member_path(member) do %>
                    <%= image_tag member.get_profile_image, size:"65x65" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to member_path(member) do %>
                    <%= member.name %>
                  <% end %>
                </td>
                <td><%= simple_format(member.introduction) %></td>
                <td>
                  <% member.tags.each do |tag| %>
                    <span class="badge badge-info"><%= tag.name %></span><br>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <p><%= paginate @members %></p>
      </div>
    </div>
  </div>
</div>