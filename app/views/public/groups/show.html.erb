<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 text-center">
      <h2><%= @group.name %></h2>
      <p><%= @group.introduction %></p>
      <div class="row justify-content-end">
        <div class="col-3 mr-3">
          <% if @group.members.include?(current_member) %>
            <%= link_to "グループチャット", group_chats_path(@group), class: "btn btn-outline-primary" %>
          <% end %>
        </div>
        <div class="col-3 mr-2">
          <% unless @group.owner_id == current_member.id %>
            <% if @group.members.include?(current_member) %>
              <%= link_to "グループを退会", group_path(@group), method: :delete, class: "btn btn-danger" %>
            <% else %>
              <%= link_to "グループに参加", group_join_path(@group), class: "btn btn-info" %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="row justify-content-center group-member-index">
        <%= render 'public/members/index', members: @members %>
      </div>
    </div>
  </div>
</div>