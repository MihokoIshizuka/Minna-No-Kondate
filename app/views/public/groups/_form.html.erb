<div class="form-group">
  <%= f.label :"グループ名（15文字以内）", class: "col-3 form-label" %>
  <%= f.text_field :name, class: "col-5", maxlength: 15 %>
</div>
<div class="form-group">
  <%= f.label :"紹介（30文字以内）", class: "col-3 form-label" %>
  <%= f.text_area :introduction, class: "col-5", maxlength: 30 %>
</div>
<div class="form-group">
  <%= f.label :"タグ", class: "col-3 form-label" %>
  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
    <div class="form-check">
      <%= tag.label class: "form-check-label" do %>
        <%= tag.check_box class: "form-check-input" %>
        <%= tag.text %>
      <% end %>
    </div>
  <% end %>
</div>
<div class="form-group">
  <%= f.label :"アイコン画像", class: "col-3 form-label" %>
  <%= f.file_field :image, class: "col-5", accept: 'image/*' %>
</div>