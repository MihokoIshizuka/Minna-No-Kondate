<div class="container">
  <div class="row justify-content-center">
    <h2>グループ編集</h2>
  </div>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <%= render 'public/shared/error_messages', resource: @group %>
      <%= form_with model: @group, url: group_path(@group), method: :patch, local: true do |f| %>
        <%= render 'form', f: f %>
        <div class="row  justify-content-around">
          <div class="form-group">
            <%= f.submit "変更を保存する", class: "btn btn-outline-success" %>
          </div>
          <div class="form-group">
            <%= link_to "グループを削除する", group_all_destroy_path(@group), method: :delete, class: "btn btn-outline-danger", "data-confirm" => "本当にグループを削除しますか？" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>