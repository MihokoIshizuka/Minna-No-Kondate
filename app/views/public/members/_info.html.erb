<div class="row justify-content-center">
  <div class="mx-auto mb-3">
    <%= image_tag member.get_profile_image(150, 150) %>
  </div>
</div>
<table class="table">
  <tr>
    <th>name</th>
    <td><%= member.name %></td>
  </tr>
  <tr>
    <th>intro</th>
    <td><%= member.introduction %></td>
  </tr>
</table>

<div class="row">
  <%= link_to edit_member_path(member), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>