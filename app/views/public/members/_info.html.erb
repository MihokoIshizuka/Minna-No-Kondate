<div class="row justify-content-center info-icon-box">
  <div class="mx-auto mb-3">
    <%= image_tag member.get_profile_image, size:"150x150" %>
  </div>
</div>
<table class="table">
  <tr>
    <th>name</th>
    <td><%= member.name %></td>
  </tr>
  <tr>
    <th>intro</th>
    <% if member.is_deleted == true %>
      <td class="deleted-member">この会員は退会しています</td>
    <% else %>
      <td><%= simple_format(member.introduction) %></td>
    <% end %>
  </tr>
</table>
<div id="relationships">
  <%= render 'public/relationships/relationships', member: member %>
</div>
<% if member.email != "guest@example.com" %>
  <% if member.id == current_member.id %>
    <div class="row mt-3">
      <%= link_to member_favorites_path(current_member), class: "btn btn-block favorite-index" do %>
        <i class="fas fa-heart"></i>
      <% end %>
    </div>
  <% end %>
  <div class="row mt-3">
    <%= link_to edit_member_path(member), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
<% end %>