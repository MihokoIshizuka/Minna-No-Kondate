<div class="container">
  <div class="row justify-content-center">
    <h2>会員情報編集</h2>
  </div>
  <div class="row">
    <div class="col-8 mx-auto">
      <%= form_with model: @member, url: member_path(@member), method: :patch, local: true do |f| %>
        <div class="form-group">
          <%= f.label :名前 %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <%= f.label :画像 %>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>

        <div class="row justify-content-around">
        </div>
      <% end %>
    </div>
  </div>
</div>