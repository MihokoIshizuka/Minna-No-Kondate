<h2>メンバー編集</h2>
<div class="container">
  <div class="rowjustify-content-center">
    <h3>会員情報編集</h3>
    <div class="col-8">
      <%= form_with model: @member, local: true do |f| %>
      <div class="form-group">
        <%= f.label :名前 %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :紹介文 %>
        <%= f.text_area :introduction %>
      </div>
      <div class="form-group">
        <%= f.label :画像 %>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="row justify-content-around">
        <div class="form-group">
          <%= f.submit "変更する", class: "btn btn-outline-primary" %>
        </div>
        <div class="form-group">
          <%= link_to "退会する", member_quit_path(@member), class: "btn btn-outline-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>