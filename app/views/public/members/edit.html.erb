<div class="container">
  <div class="row justify-content-center">
    <h3 class="mb-3">会員情報編集</h3>
  </div>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <%= render 'public/shared/error_messages', resource: @member %>
      <%= form_with model: @member, url: member_path(@member), method: :patch, local: true do |f| %>
        <div class="form-group">
          <%= f.label :名前, class: "col-3 form-label text-center" %>
          <%= f.text_field :name, class: "col-5", maxlength: 10 %>
        </div>
        <div class="form-group">
          <%= f.label :紹介文, class: "col-3 form-label text-center" %>
          <%= f.text_area :introduction, class: "col-5", maxlength: 30 %>
        </div>
        <div class="form-group">
          <%= f.label :画像, class: "col-3 form-label text-center" %>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="form-group tag">
          <%= f.label :よく利用するタグ（最大3個まで）, class: "col-3 form-label text-center" %>
          <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class="form-check">
              <%= tag.label class: "form-check-label" do %>
                <%= tag.check_box class: "form-check-input" %>
                <%= tag.text %>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="row justify-content-around">
          <div class="form-group">
            <%= f.submit "変更する", class: "btn btn-outline-primary" %>
          </div>
          <div class="form-group">
            <%= link_to "退会する", member_quit_path(@member), class: "btn btn-outline-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>