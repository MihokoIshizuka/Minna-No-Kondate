<div class="container">
  <div class="row justify-content-center">
    <h3 class="mb-3">新規登録</h3>
  </div>
  <div class="row">
    <div class="col-6 mx-auto">
      <%= form_with model: @member, url: member_registration_path, method: :post, class: "text-center py-3" do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :名前（2～10文字） %><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="form-group">
          <%= f.label :メールアドレス %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.label :確認用パスワード %><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="form-group">
          <%= f.label :紹介文（20文字以内） %><br>
          <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
        </div>

        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-outline-info" %>
        </div>

        <div class="row justify-content-center">
          <%= render "public/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


