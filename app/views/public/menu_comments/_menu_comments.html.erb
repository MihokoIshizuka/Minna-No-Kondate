<p>コメント件数: <%= menu.menu_comments.count %> 件</p>
<% menu.menu_comments.each do |menu_comment| %>
  <div class="row">
    <div class="col-2">
      <%= link_to member_path(menu_comment.member) do %>
        <%= image_tag menu_comment.member.get_profile_image, size:"65x65" %><br>
        <%= menu_comment.member.name %>
      <% end %>
    </div>
    <div class="col-4">
      <!--コメント改行表示できる-->
      <%=safe_join(menu_comment.comment.split("\n"),tag(:br))%><br>
      <%= menu_comment.created_at. strftime('%Y/%m/%d') %>
      <% if menu_comment.member == current_member %>
        <%= link_to "削除", menu_menu_comment_path(menu_comment.menu, menu_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
      <% end %>
    </div>
  </div>
<% end %>