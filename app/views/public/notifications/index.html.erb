<div class="container">
  <div class="row justify-content-center">
    <h4 class="my-3">通知</h4>
    <%= link_to member_notifications_all_destroy_path(current_member), method: :delete do %>
      <i class="fas fa-trash" style="color:steelblue;"></i>
      <h7 style="color:steelblue">すべて削除する</h7>
    <% end %>
    <% notifications = @notifications.where.not(visiter_id: current_member.id) %>
    <% if notifications.exists? %>
      <%= render 'public/notifications/notification' %>
    <% else %>
      <p>通知はありません</p>
    <% end %>
  </div>
</div>

