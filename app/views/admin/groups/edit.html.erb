<div class="container">
  <div class="row justify-content-center">
    <h2>グループ編集</h2>
  </div>
  <div class="row">
    <div class="col-8 mx-auto">
      <%= form_with model: @group, url: admin_group_path(@group), method: :patch, local: true do |f| %>
        <div class="form-group">
          <%= f.label :"グループ名", class: "col-3 form-label" %>
          <%= f.text_field :name, class: "col-5" %>
        </div>
        <div class="form-group">
          <%= f.label :"紹介", class: "col-3 form-label" %>
          <%= f.text_area :introduction, class: "col-5" %>
        </div>
        <div class="form-group">
          <%= f.label :"タグ", class: "col-3 form-label" %>
          <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
            <div class="form-check">
              <%= tag.label class: "form-check-label" do %>
                <%= tag.check_box class: "form-check-input" %>
                <%= tag.text %>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :"アイコン画像", class: "col-3 form-label" %>
          <%= f.file_field :image, class: "col-5", accept: 'image/*' %>
        </div>
        <div class="row  justify-content-center">
          <div class="form-group">
            <%= f.submit "変更を保存する", class: "btn btn-outline-success" %>
          </div>
          <div class="form-group">
            <%= link_to "グループを削除する", admin_group_all_destroy_path(@group), method: :delete, class: "btn btn-outline-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>