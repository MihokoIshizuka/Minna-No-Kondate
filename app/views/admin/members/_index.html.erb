<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>name</th>
      <th>introduction</th>
      <th>status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% members.each do |member| %>
    <tr>
      <td>
        <%= link_to admin_member_path(member) do %>
          <%= image_tag member.get_profile_image, size:"65x65" %>
        <% end %>
      </td>
      <td>
        <%= link_to admin_member_path(member) do %>
          <%= member.name %>
        <% end %>
      </td>
      <td><%= member.introduction %></td>
      <% if member.is_deleted == true %>
        <td class="text-secondary font-weight-bold">退会</td>
      <% else %>
        <td class="text-success font-weight-bold">会員</td>
      <% end %>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>