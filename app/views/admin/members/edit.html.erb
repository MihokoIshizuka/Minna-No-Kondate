<div class="container">
  <div class="row justify-content-center">
    <h3 class="mb-3">会員情報編集</h3>
  </div>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <%= render 'admin/shared/error_messages', resource: @member %>
      <%= form_with model: @member, url: admin_member_path(@member), method: :patch, local: true do |f| %>
        <div class="form-group">
          <%= f.label :名前, class: "col-md-3 form-label text-center" %>
          <%= f.text_field :name, class: "col-md-5", maxlength: 10 %>
        </div>
        <div class="form-group">
          <%= f.label :紹介文, class: "col-md-3 form-label text-center" %>
          <%= f.text_area :introduction, class: "col-md-5", maxlength: 30 %>
        </div>
        <div class="form-group">
          <%= f.label :画像, class: "col-md-3 form-label text-center" %>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :会員ステータス, class: "col-md-3 form-label text-center" %>
          <div class="text-center">
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, '退会', value: true %>
          </div>
          <div class="text-center">
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, '会員', value: false %>
          </div>
        </div>
        <div class="row justify-content-around">
          <div class="form-group">
            <%= f.submit "変更する", class: "btn btn-outline-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>