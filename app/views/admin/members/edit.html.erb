<div class="container">
  <div class="row justify-content-center">
    <h2>会員情報編集</h2>
  </div>
  <div class="row">
    <div class="col-8 mx-auto">
      <%= form_with model: @member, url: admin_member_path(@member), method: :patch, local: true do |f| %>
        <div class="form-group">
          <%= f.label :名前 %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :紹介文 %>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <%= f.label :画像 %>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div class="row justify-content-around">
          <div class="form-group">
            <%= f.submit "変更する", class: "btn btn-outline-primary" %>
          </div>
          <% if @member.is_deleted == false %>
            <div class="form-group">
              <%= link_to "退会する", admin_out_path(@member), method: :patch, "data-confirm" => "会員を強制退会させますか？", class: "btn btn-outline-danger" %>
            </div>
          <% else %>
            <div class="form-group">
              <%= link_to "会員に戻す", class: "btn btn-outline-danger" %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>