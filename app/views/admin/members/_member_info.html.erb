<div class="row justify-content-center">
  <div class="mx-auto mb-3">
    <%= image_tag member.get_profile_image, size:"150x150" %>
  </div>
</div>
<table class="table">
  <tr>
    <th>name</th>
    <td><%= member.name %></td>
  </tr>
  <tr>
    <th>intro</th>
    <td><%= simple_format(member.introduction) %></td>
  </tr>
</table>
<table class="table">
  <th>Follow</th>
  <td>
    <%= link_to member_followings_path(member), remote: true do %>
      <%= member.followings.count %>
    <% end %>
  </td>

  <th>Follower</th>
  <td>
    <%= link_to member_followers_path(member), remote: true do %>
      <%= member.followers.count %>
    <% end %>
  </td>
</table>

<div class="row mt-3">
  <%= link_to edit_admin_member_path(member), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
