<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-12 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>名前</th>
            <th>紹介</th>
            <th>ステータス</th>
            <th>作成日時</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
          <!--ゲストユーザーは一覧に入れないようにする-->
            <% unless member.email == "guest@example.com"%>
              <tr>
                <td>
                  <%= link_to admin_member_path(member) do %>
                    <%= image_tag member.get_profile_image, size:"65x65" %>
                  <% end %>
                </td>
                <td>
                  <%= link_to admin_member_path(member) do %>
                    <%= member.name %>
                  <% end %>
                </td>
                <td><%= member.introduction %></td>
                <% if member.is_deleted == true %>
                  <td class="text-secondary font-weight-bold text-center">退会</td>
                <% else %>
                  <td class="text-success font-weight-bold text-center">会員</td>
                <% end %>
                <td>
                  <!--ここを会員がお問い合わせチャットを作成した日時に変更したい-->
                  <%= member.created_at.strftime("%Y/%m/%d %H:%M") %>
                </td>
                <td>
                  <%= link_to "お問い合わせ", admin_member_contacts_path(member), class: "btn btn-outline-primary" %>
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
        <p><%= paginate @members %></p>
      </div>
    </div>
  </div>
</div>