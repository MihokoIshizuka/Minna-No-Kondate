<div class="container">
  <div class="row justify-content-center">
    <div class="col-7">
      <%= form_with model: @tag, url: admin_tags_path, method: :post do |f| %>
        <table class="table text-center tag-form">
          <tr>
            <th>タグ名</th>
            <td><%= f.text_field :name %></td>
            <td><%= f.submit "タグ作成", class: "btn btn-outline-info" %></td>
          </tr>
        </table>
      <% end %>

      <div class="row justify-content-center">
        <div class="col-7">
          <table class="table ">
            <thead class="text-center">
              <tr>
                <th>タグ</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @tags.each do |tag| %>
                <tr>
                  <td><%= tag.name %></td>
                  <td>
                    <%= link_to "編集", edit_admin_tag_path(tag), class: "btn btn-sm btn-success" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </div>
</div>