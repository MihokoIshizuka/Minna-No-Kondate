<!DOCTYPE html>
<html>
  <head>
    <title>MinnaNoKondate</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@300&display=swap" rel="stylesheet">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="main-content">
      <header>
        <% if member_signed_in? %>
          <%= render 'layouts/members_header' %>
        <% elsif admin_signed_in? %>
          <%= render 'layouts/admin_header' %>
        <% else %>
          <%= render 'layouts/not_signed_in' %>
        <% end %>

      </header>
      <main>
        <p>
          <% if flash[:notice] %>
            <div class="flash text-center" id="notice">
              <%= notice %>
            </div>
          <% elsif flash[:alert] %>
            <div class="flash text-center" id="alert">
              <%= alert %>
            </div>
          <% end %>
        </p>
        <%= yield %>
      </main>
      <footer>
        <% if member_signed_in? %>
          <%= render 'layouts/members_footer' %>
        <% elsif admin_signed_in? %>
          <%= render 'layouts/admin_footer' %>
        <% else %>
          <%= render 'layouts/not_signed_in_footer' %>
        <% end %>
      </footer>
    </div>
  </body>
</html>
